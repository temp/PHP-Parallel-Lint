{
    "output": "parallel-lint.phar",
    "main": "parallel-lint",
    "files": [
        "LICENSE"
    ],
    "finder": [
        {
            "name": ["*.php"],
            "exclude": ["Tests", "tests"],
            "in": "vendor"
        },
        {
            "exclude": ["Tests"],
            "in": "src"
        },
        {
            "in": "bin"
        }
    ]
}
